{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "ES6",
    "declaration": true,
    "sourceMap": true,
    "noImplicitThis": false
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "index.tsx", "index.ts"],
  "exclude": ["node_modules", "dev_server.js", "src/demo.tsx"]
}
